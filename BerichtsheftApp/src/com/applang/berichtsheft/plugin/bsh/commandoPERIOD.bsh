commandoPERIOD(view,pane,ns,label,var,options)
{
	import com.applang.*;
	import com.applang.components.*;
	
	entry = new JTextField(30);
	value = ns.getVariable(var);
	if(Util.notNullOrEmpty(value))
		entry.setText(value.toString());
	else
		entry.setText(DatePicker.Period.getDescription());

	valueChanged()
	{
		ns.setVariable(var,entry.getText());
	}

	dim = entry.getPreferredSize();
	dim.width = Integer.MAX_VALUE;
	entry.setMaximumSize(dim);

	box = new Box(BoxLayout.X_AXIS);
	box.add(entry);
	box.add(Box.createHorizontalStrut(12));

	icon = com.applang.berichtsheft.plugin.BerichtsheftPlugin.loadIcon("/images/calendar_22x22.png");
	btn = new RolloverButton(icon);
	btn.setToolTipText("Pick a period");
	listener = new ActionListener()
	{
		actionPerformed(evt)
		{
			DatePicker.Period.pick();
			entry.setText(DatePicker.Period.description());
		}
	};
	btn.addActionListener(listener);
	box.add(btn);

	pane.addComponent(label,box);

	return this;
}
