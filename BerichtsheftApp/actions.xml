<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>
	<ACTION NAME="datadock.choose-uri">
		<CODE>
			wm.addDockableWindow("datadock");
			wm.getDockableWindow("datadock").chooseUri();
		</CODE>
	</ACTION>

	<ACTION NAME="datadock.update-uri">
		<CODE>
			wm.addDockableWindow("datadock");
			wm.getDockableWindow("datadock").updateUri();
		</CODE>
	</ACTION>

	<ACTION NAME="datadock.transport-to-buffer">
		<CODE>
			wm.addDockableWindow("datadock");
			wm.getDockableWindow("datadock").transportToBuffer();
		</CODE>
	</ACTION>

	<ACTION NAME="datadock.transport-from-buffer">
		<CODE>
			wm.addDockableWindow("datadock");
			wm.getDockableWindow("datadock").transportFromBuffer();
		</CODE>
	</ACTION>

	<ACTION NAME="berichtsheft.spellcheck-selection">
		<CODE>
			import com.applang.berichtsheft.plugin.*;
			BerichtsheftPlugin.spellcheckSelection(view);
		</CODE>
	</ACTION>
</ACTIONS>

