<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>
	<ACTION NAME="berichtsheft.choose-uri">
		<CODE>
			wm.addDockableWindow("berichtsheft");
			wm.getDockableWindow("berichtsheft").chooseUri();
		</CODE>
	</ACTION>

	<ACTION NAME="berichtsheft.update-uri">
		<CODE>
			wm.addDockableWindow("berichtsheft");
			wm.getDockableWindow("berichtsheft").updateUri();
		</CODE>
	</ACTION>

	<ACTION NAME="berichtsheft.transport-to-buffer">
		<CODE>
			wm.addDockableWindow("berichtsheft");
			wm.getDockableWindow("berichtsheft").transportToBuffer();
		</CODE>
	</ACTION>

	<ACTION NAME="berichtsheft.transport-from-buffer">
		<CODE>
			wm.addDockableWindow("berichtsheft");
			wm.getDockableWindow("berichtsheft").transportFromBuffer();
		</CODE>
	</ACTION>
</ACTIONS>

